<!-- app/views/users/index.html.erb -->

<h1>Users</h1>
<%= link_to 'New User', new_user_path %>

<table>
	<% if @users.any? %>
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
	<% end %>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user_path(user) %> |
          <%= link_to 'Edit', edit_user_path(user) %> |
          <%= form_with model: user, method: :delete, data: { confirm: 'Are you sure?' } do |form| %>
						<%= form.submit 'Destroy' %>
					<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
